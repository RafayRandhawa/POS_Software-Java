<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="580.0" prefWidth="910.0" style="-fx-background-color: #bbe1ff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ManageSalesController">
   <children>
      <Label alignment="CENTER" layoutX="1.0" layoutY="56.0" prefHeight="49.0" prefWidth="910.0" text="Do you want to search by Cashier Code or Sales ID? ">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="search" layoutX="368.0" layoutY="146.0" prefHeight="30.0" prefWidth="180.0" promptText="Cashier Code/Sales ID..." />
      <Button layoutX="411.0" layoutY="192.0" mnemonicParsing="false" onAction="#search" prefHeight="25.0" prefWidth="95.0" style="-fx-background-color: #2086FF;" text="Search" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button layoutX="21.0" layoutY="14.0" mnemonicParsing="false" onAction="#mainMenu" prefHeight="35.0" prefWidth="147.0" style="-fx-background-color: #2086FF;" text="Back to Main Menu" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button layoutX="806.0" layoutY="14.0" mnemonicParsing="false" onAction="#logout" prefHeight="35.0" prefWidth="68.0" style="-fx-background-color: RED;" text="Logout" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <TableView fx:id="salesTable" layoutY="249.0" prefHeight="375.0" prefWidth="910.0">
         <columns>
            <TableColumn fx:id="salesID" prefWidth="87.0" text="Sales ID" />
            <TableColumn fx:id="cashierCode" prefWidth="147.0" text="Cashier Code" />
            <TableColumn fx:id="saleDate" prefWidth="137.0" text="Sale Date" />
            <TableColumn fx:id="saleTime" minWidth="9.0" prefWidth="150.0" text="Sale Time" />
            <TableColumn fx:id="amount" prefWidth="131.0" text="Amount" />
            <TableColumn fx:id="numberOfItems" prefWidth="129.0" text="Number of Items" />
            <TableColumn fx:id="paymentMethod" prefWidth="128.0" text="Payment Method" />
         </columns>
      </TableView>
      <RadioButton fx:id="code" layoutX="355.0" layoutY="97.0" mnemonicParsing="false" prefHeight="49.0" prefWidth="110.0" text="Cashier Code">
         <toggleGroup>
            <ToggleGroup fx:id="toggleGroup" />
         </toggleGroup>
         <font>
            <Font size="14.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="ID" layoutX="489.0" layoutY="97.0" mnemonicParsing="false" prefHeight="49.0" prefWidth="95.0" text="Sales ID" toggleGroup="$toggleGroup">
         <font>
            <Font size="14.0" />
         </font>
      </RadioButton>
   </children>
</AnchorPane>
